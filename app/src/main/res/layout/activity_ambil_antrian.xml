<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:background="@color/putih"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="244dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/home_ambilantrian" />

                <Button
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/custom_button2"
                    android:drawableLeft="@drawable/ambil_antrian"
                    android:fontFamily="@font/regular"
                    android:gravity="center"
                    android:text="Ambil Antrian"
                    android:textColor="@color/hitam"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center"
                android:text="19.00 WIB, 22 April 2020"
                android:textSize="18dp"
                android:textStyle="italic" />

            <FrameLayout
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="POLI UMUM"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jumlah antrian : "
                    android:textSize="15dp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/btn_ambil_antrian"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="65dp"
                    android:text="Ambil Antrian"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/putih"
                    android:layout_centerHorizontal="true"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="POLI GIGI"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jumlah antrian : "
                    android:textSize="15dp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/btn_ambil_antrian2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="65dp"
                    android:text="Ambil Antrian"
                    android:background="@drawable/custom_button"
                    android:textColor="@color/putih"/>
            </FrameLayout>

        </LinearLayout>


</RelativeLayout>
